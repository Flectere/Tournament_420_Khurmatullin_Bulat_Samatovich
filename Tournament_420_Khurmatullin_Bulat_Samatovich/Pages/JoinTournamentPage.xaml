<Page x:Class="Tournament_420_Khurmatullin_Bulat_Samatovich.Pages.JoinTournamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_420_Khurmatullin_Bulat_Samatovich.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoinTournamentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        


        <ListView Grid.Row="0"
      Name="ListUsers"
      Grid.ColumnSpan="7"
      Grid.RowSpan="8" d:ItemsSource="{d:SampleData ItemCount=5}"
      FontSize="20" SelectionChanged="ListUsers_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                   >
                        <TextBlock Text="{Binding Name}"
                       Margin="20"></TextBlock>
                        <TextBlock Text="{Binding Game}"
                        Margin="20"></TextBlock>
                        <TextBlock Text="{Binding Date}"
                        Margin="20"></TextBlock>
                        <TextBlock Text="{Binding Fond}"
Margin="20"/>
                        <TextBlock Text="{Binding Status.Name}"
Margin="20"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
